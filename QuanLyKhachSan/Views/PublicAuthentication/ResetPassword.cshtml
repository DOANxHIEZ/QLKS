
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
@if (ViewBag.mess == "Error")
{

    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 10PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Hai mật khẩu không trùng khớp',
                /* text: 'Redirecting...', */
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'error'
            })
        </script>
    </div>
}
<div class="site-blocks-cover overlay" style="background-image: url('../../content/images/hero_1.jpg');" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-7 text-center" style="padding: 0;" data-aos="fade">
                <span class="caption mb-3">Misaki Hotel &amp; Resort</span>
                <h1 class="mb-4">Đổi Mật Khẩu</h1>
            </div>
        </div>
    </div>
</div>
<!-- HOME -->
<section class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 mb-5">

            </div>
            <div class="col-lg-6">
                <h2 class="mb-4">Quên mật khẩu</h2>
                <form action="/PublicAuthentication/UpdatePassword" method="post" class="p-4 border rounded">
                    <input type="hidden" value="@ViewBag.IdUser" name="idUser" />
                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Mật khẩu mới:</label>
                            <input type="password" id="fname" name="password" class="form-control" required>
                        </div>
                    </div>
                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Nhập lại mật khẩu mới:</label>
                            <input type="password" id="fname" name="rePassword" class="form-control" required>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            <input type="submit" value="Cập nhập" class="btn btn-block btn-primary btn-md">
                        </div>
                        <div class="col-md-6">


                        </div>
                    </div>

                </form>
            </div>
            <div class="col-lg-3 mb-5">

            </div>
        </div>
    </div>
</section>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<!-- Slide -->
<div class="site-blocks-cover overlay" style="background-image: url('../../content/images/hero_1.jpg'); margin-top: 71px; " data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-7 text-center" data-aos="fade">
                <span class="caption mb-3">Misaki Hotel &amp; Resort</span>
                <h1 class="mb-4">Phòng Khách Sạn</h1>
            </div>
        </div>
    </div>
</div>

<!-- List Rooms -->
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto text-center mb-5 section-heading">
                <h2 class="mb-5">Phòng Của Chúng Tôi</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in ViewBag.List)
            {
                <!-- Phòng đôi -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="hotel-room text-center">
                        <a href="/PublicRoom/DetailRoom/@item.idRoom" class="d-block mb-0 thumbnail"><img src="/Content/images/@item.image" alt="Image" class="img-fluid"></a>
                        <div class="hotel-room-body">
                            <h3 class="heading mb-0"><a href="/PublicRoom/DetailRoom/@item.idRoom">@item.name</a></h3>
                            <p class="rate">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span> @item.view lượt xem</span>
                            </p>
                            @{
                                int price1 = item.cost - item.cost * item.discount / 100;
                            }
                            <strong class="price">Giá phòng :  @price1 VND</strong>
                            <p class="ml-auto"><a href="/PublicRoom/DetailRoom/@item.idRoom">Xem chi tiết</a></p>
                        </div>
                    </div>
                </div>
             }
        </div>
      
        <!-- Số Trang -->
        <div class="row mt-5">
            <div class="col-md-12 text-center">
                <div class="site-block-27">
                    <ul>
                        @if (ViewBag.tag > 1)
                        {
                            int b = ViewBag.tag - 1;
                            <li><a href="/PublicRoom/Index/@b">&lt;</a></li>

                        }
                        else
                        {
                            <li></li>
                        }
                        @for (var i = 1; i <= ViewBag.pageSize; i++)
                        {
                            if (ViewBag.tag == i)
                            {
                                <li class="active"><a href="/PublicRoom/Index/@i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="/PublicRoom/Index/@i">@i</a></li>
                            }

                        }

                        @if (ViewBag.tag < ViewBag.pageSize)
                        {
                            int a = ViewBag.tag + 1;
                            <li><a href="/PublicRoom/Index/@a">&gt;</a></li>

                        }
                        else
                        {
                            <li></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>